{
  "include": ["./src/**/*"],

  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015",

    "outDir": "dist",

    "paths": {
        "bb/*":    ["./game/src/*"],
        "sfh":     ["./src/types/SFH"],
        "/sfh/*":  ["./src/sfh/*"],
        "/ui/*":   ["./src/ui/*"],
        "/data/*": ["./src/data/*"],
        "/misc/*": ["./src/misc/*"],
        "/bin/*":  ["./src/bin/*"]
    },

    "strict": true,
    "jsx": "react",
    "sourceMap": false,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
